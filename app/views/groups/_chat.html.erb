<div class="chat-box">
  <% if !@user.nil? %>
  <div class="chat-window">
  <% @messages.each do |message| %>
    <% if !message.game_id.nil? %>
      Game scheduled: <%= message.game.name %> at <%= message.game.location %> for <%= message.game.date.strftime("%d/%m/%Y") %> at <%= message.game.time.strftime("%k:%M") %>
    <% else %>
    <div class="message">
      <div class="message-title">
        <h3><%= message.user.username %> Posted</h3>
      </div>
      <div class="message-content">
        <%= message.content %>
        <div class="comments">
          <% message.comments.each do |comment| %>
            <div class="comment-title">
              <p><%= comment.name %></p>
            </div>
            <div class="comment-content">
              <p><%= comment.body %></p>
            </div>
          <% end %>
        </div>
        
        <%= form_for([message, message.comments.build]) do |f| %>
      <p>
        <input type="hidden" name="comment[name]" id="comment_name" value="<%= current_user.username %>">
      </p>
      <!-- <input type="hidden" name="message[id]" id="message_id" value="<%= message.id %>"> -->
      <div class="comment-textarea">
        <!-- <%= f.text_area :body %> -->
        <textarea name="comment[body]" id="comment_body" placeholder="Comment here..." required></textarea>
        <!-- <%= f.submit %> -->
        <!-- <input type="submit" name="commit" value="Create Comment" data-disabled-with="Create Comment"> -->
        <button type="submit" name="commit">Create Comment</button>
      </div>
      <p>
      </p>

      <% end %>
      </div>
    </div>
  <% end %>
  <% end %>
  </div>
     <br>
    
    
    
  

  <%= form_with url: group_message_path(@group), method: 'post' do |f| %> 
    <p>
      Add message: <br>
      <%= f.text_area :content, required: true %>
    </p>
    <p>
      <%= f.submit "Send" %>
    </p>
  <% end %>
<% end %>
</div>
